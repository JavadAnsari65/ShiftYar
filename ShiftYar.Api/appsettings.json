{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/shiftyar-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{MachineName}] [PID:{ProcessId}] [TID:{ThreadId}] [{SourceContext}] [RequestId:{RequestId}] [CorrelationId:{CorrelationId}] [User:{User}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithEnvironmentName",
      "WithMachineName",
      "WithProcessId",
      "WithCorrelationId",
      "WithRequestId"
    ]
  },
  "AllowedHosts": "*",
  "JwtConfig": {
    "Key": "k8V!z2Qw#1Lp@7Xc$9Bn^4Rt%6Yh*3Jm&5Sd(0Fg)8Zx!2Cv",
    "Issuer": "ShiftYar",
    "Audience": "ShiftYarUsers",
    "AccessTokenExpirationMinutes": 10,
    "RefreshTokenExpirationDays": 7
  },
  "KavenegarConfig": {
